<div class="container horoscope-container">
  <div class="horoscope-icon">⭐</div>
  <h1>今日の星座占い</h1>
  
  <div class="selector">
    <label for="zodiac-select">星座を選択</label>
    <select id="zodiac-select">
      <option value="">今日の運勢</option>
      <% allHoroscopes.forEach((h, i) => { %>
        <option value="<%= i %>" <%= selectedIndex == i ? 'selected' : '' %>><%= h.sign %></option>
      <% }); %>
    </select>
  </div>
  
  <div class="horoscope-card">
    <div class="sign"><%= horoscope.sign %></div>
    <div class="fortune-label">今日の運勢</div>
    <div class="fortune"><%= horoscope.fortune %></div>
    <div class="lucky"><%= horoscope.lucky %></div>
    
    <button class="favorite-btn" id="favoriteBtn">
      <span class="btn-icon">❤️</span>
      <span>お気に入りに追加</span>
    </button>
  </div>
  
  <div class="nav">
    <a href="/">ホーム</a>
    <a href="/date">今日の日付</a>
    <a href="/quote">偉人の名言</a>
  </div>
</div>

<script>
  document.getElementById('zodiac-select').addEventListener('change', function() {
    window.location.href = '/horoscope?sign=' + this.value;
  });
  
  document.getElementById('favoriteBtn').addEventListener('click', async function() {
    const btn = this;
    btn.disabled = true;
    
    try {
      const response = await fetch('/api/favorites', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          type: 'horoscope',
          content: '<%= horoscope.sign %>: <%= horoscope.fortune %>',
          author: '<%= horoscope.lucky %>'
        })
      });
      
      if (response.ok) {
        btn.innerHTML = '<span class="btn-icon">✅</span><span>追加しました！</span>';
        setTimeout(() => {
          btn.innerHTML = '<span class="btn-icon">❤️</span><span>お気に入りに追加</span>';
          btn.disabled = false;
        }, 2000);
      } else {
        alert('追加に失敗しました');
        btn.disabled = false;
      }
    } catch (err) {
      console.error('Error:', err);
      alert('追加に失敗しました');
      btn.disabled = false;
    }
  });
</script>

